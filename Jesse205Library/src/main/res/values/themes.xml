    <style name="Theme.Jesse205.Orange" parent="Theme.Jesse205">
        <item name="colorPrimary">@color/jesse205_orange</item>
        <item name="rippleColorAccent">@color/jesse205_orange_ripple</item>
    </style>
    <style name="Theme.Jesse205.Orange.DarkActionBar" parent="Theme.Jesse205.DarkActionBar">
        <item name="colorPrimary">@color/jesse205_orange</item>
        <item name="colorPrimaryDark">@color/jesse205_orange_dark</item>
