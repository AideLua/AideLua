<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--基础主题-->
    <style name="Base.Theme.Jesse205" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/jesse205_blue</item>
        <item name="colorPrimaryDark">?windowBackgroundColor</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorSurface">?windowBackgroundColor</item>
        <item name="colorOnSecondary">?colorOnPrimary</item>
        <item name="colorSecondaryVariant">?colorSecondary</item>

        <item name="colorBackgroundFloating">@color/jesse205_white</item>
        <!--按钮边框的颜色默认是按压下去的，所以要写死边框颜色才行-->
        <item name="strokeColor">@color/jesse205_grey_light</item>
        <item name="dialogBackgroundColor">@color/jesse205_white</item>
        <item name="windowBackgroundColor">@color/jesse205_white</item>
        <item name="windowLightStatusBar">true</item>
        <item name="windowLightNavigationBar">true</item>
        <item name="android:windowBackground">?windowBackgroundColor</item>
        <item name="android:navigationBarColor">?windowBackgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?windowLightStatusBar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">?windowLightNavigationBar</item>

        <!--波纹颜色-->
        <item name="rippleColorAccent">@color/jesse205_blue_ripple</item>
        <item name="rippleColorPrimary">@color/ripple_material_light</item>

        <item name="actionBarTheme">@style/ThemeOverlay.Jesse205.ActionBar.Surface</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Surface</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="actionModeBackground">?colorSurface</item>
        <!--<item name="actionBarWidgetTheme">@null</item>-->
        <!--<item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>-->
		<!--<item name="actionModeBackground">@drawable/jesse205_cab_background_top_material</item>-->
		<!--<item name="floatingActionButtonBackgroundColor">?colorAccent</item>
        <item name="floatingActionButtonStyle">@style/Widget.Jesse205.FloatingActionButton.Dark</item>-->
        <item name="android:listViewStyle">@style/Widget.Jesse205.ListView</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>
        <!--<item name="autoCompleteTextViewStyle">@style/Widget.Jesse205.AutoCompleteTextView</item>-->

        <!--<item name="actionOverflowMenuStyle">@style/Widget.Jesse205.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Widget.Jesse205.PopupMenu</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">@style/Widget.Jesse205.ContextPopupMenu</item>
        -->
        <item name="actionSearchEditStyle">@style/Widget.Jesse205.ActionSearchEdit.Surface</item>
        
        <item name="android:alertDialogTheme">@style/Base.Theme.Jesse205.Dialog.Alert</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Jesse205.Dialog.Alert</item>

        <item name="materialCardViewStyle">@style/Widget.Jesse205.Material.CardView</item>
        <item name="cardViewStyle">@style/Widget.Jesse205.CardView</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
        <item name="chipStyle">@style/Widget.Jesse205.Chip</item>
        <!--<item name="cardViewStyle">@style/Widget.Jesse205.CardView</item>
        <item name="materialCardViewStyle">@style/Widget.Jesse205.CardView</item>
        <item name="navigationViewStyle">@style/Widget.Jesse205.NavigationView</item>
        <item name="bottomNavigationStyle">@style/Widget.Jesse205.BottomNavigationView</item>
        <item name="chipStyle">@style/Widget.Jesse205.Chip</item>-->

        <!--字体-->
        <item name="textAppearancePopupMenuHeader">@style/TextAppearance.Jesse205.Widget.PopupMenu.Header</item>

        <!--圆角-->
        <item name="dialogCornerRadius">4dp</item>
        <item name="cardCornerRadius">?cornerRadius</item>
        <!--<item name="popupMenuCornerRadius">4dp</item>-->
        <item name="cornerRadius">8dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>

        <!--图标-->
        <item name="android:actionModeSelectAllDrawable">@drawable/ic_select_all</item>
        <item name="android:actionModeCutDrawable">@drawable/ic_content_cut</item>
        <item name="android:actionModeCopyDrawable">@drawable/ic_content_copy</item>
        <item name="android:actionModePasteDrawable">@drawable/ic_content_paste</item>
    </style>

    <style name="Base.Theme.Jesse205.Dialog.Alert" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorAccent">?colorAccent</item>
        <item name="android:windowBackground">@drawable/mtrl_dialog_background</item>
	    <item name="android:backgroundDimAmount">0.32</item>
	    <item name="colorBackgroundFloating">?dialogBackgroundColor</item>
		<item name="colorSurface">?dialogBackgroundColor</item>
	</style>

    <style name="Base.Theme.Jesse205.Dark.Dialog.Alert" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorAccent">?colorAccent</item>
        <item name="android:windowBackground">@drawable/mtrl_dialog_background</item>
  		<item name="android:backgroundDimAmount">0.32</item>
	    <item name="colorBackgroundFloating">?dialogBackgroundColor</item>
	    <item name="colorSurface">?dialogBackgroundColor</item>
	</style>


    <style name="ThemeOverlay.Jesse205.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/mtrl_dialog_background</item>
        <item name="android:backgroundDimAmount">0.32</item>
	    <item name="colorBackgroundFloating">?dialogBackgroundColor</item>
	    <item name="colorSurface">?dialogBackgroundColor</item>
	</style>


    <style name="ThemeOverlay.Jesse205.Dark.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    	<item name="colorControlNormal">@color/jesse205_white</item>
        <item name="elevation">4dp</item>
		<item name="cardBackgroundColor">@color/jesse205_white_ripple</item>
		<item name="rippleColorPrimary">@color/jesse205_white_ripple</item>
	</style>


    <style name="ThemeOverlay.Jesse205.ActionBar.Surface" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface">
        <item name="colorControlNormal">?colorOnSurface</item>
        <item name="elevation">4dp</item>
	</style>

    <style name="ThemeOverlay.Jesse205.Dark" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorBackgroundFloating">@color/jesse205_black_blue_light</item>
    </style>

    <!--正式主题-->
    <style name="Theme.Jesse205" parent="Base.Theme.Jesse205"/>
    <style name="Theme.Jesse205.DarkActionBar" parent="Theme.Jesse205">
        <item name="colorPrimary">@color/jesse205_blue</item>
        <item name="colorPrimaryDark">@color/jesse205_blue_dark</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="android:colorEdgeEffect">?colorPrimary</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Jesse205.Dark.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Solid</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Primary</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.Colored</item>
        <item name="windowLightStatusBar">false</item>
        <item name="actionSearchEditStyle">@style/Widget.Jesse205.ActionSearchEdit.Primary</item>
    </style>

    <style name="Theme.Jesse205.Default" parent="Theme.Jesse205"/>
    <style name="Theme.Jesse205.Default.DarkActionBar" parent="Theme.Jesse205.DarkActionBar"/>

    <style name="Theme.Jesse205.Red" parent="Theme.Jesse205">
        <item name="colorPrimary">@color/jesse205_red</item>
        <item name="rippleColorAccent">@color/jesse205_red_ripple</item>
    </style>
    <style name="Theme.Jesse205.Red.DarkActionBar" parent="Theme.Jesse205.DarkActionBar">
